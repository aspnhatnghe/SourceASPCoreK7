
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<input placeholder="Cần tìm" id="txtSearch" />
<div class="container" id="result"></div>
@section Scripts{
    <script>
        $(function () {
            //gắn sự kiện change cho textbox
            $("#txtSearch").keyup(function () {
                $.ajax({
                    url: "/Ajax/ProcessSearch",
                    type: "GET",
                    data: {
                        keyword: $(this).val().trim().toLowerCase()
                    },
                    success: function (responseData) {
                        $("#result").html(responseData);
                    },
                    error: function (mess) {
                        alert(mess);
                    }
                });
            });
        });
    </script>
}
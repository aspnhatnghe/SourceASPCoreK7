@model IEnumerable<D21_Session.Models.CartItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Giỏ hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Tên hàng hóa</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/Hinh/HangHoa/@item.HangMua.Hinh" height="80" /></td>
                <td>@item.HangMua.TenHh</td>
                <td>@item.HangMua.DonGia.Value</td>
                <td>
                    <input type="number" value="@item.SoLuong" />
                </td>
                <td>@item.ThanhTien</td>
            </tr>
        }
    </tbody>
</table>
